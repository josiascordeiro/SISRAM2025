<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        body {
            background-color: #020520;
        }

        thead, tr, th, h1, p {
            color: #ffffff;
        }

        table {
            text-align: center;
            margin-top: 10px;
        }

        tr {
            width: 900px;
        }

        h1 {
            font-size: 50px;
            margin-top: 5px;
        }

        p {
            font-size: 20px;
        }

        /* Responsive styles */
        @media (max-width: 1024px) {
            h1 {
                font-size: 40px;
            }
            
            p {
                font-size: 18px;
            }
            
            table {
                font-size: 14px;
            }
        }
        
        @media (max-width: 768px) {
            h1 {
                font-size: 32px;
            }
            
            p {
                font-size: 16px;
            }
            
            table {
                font-size: 12px;
            }
            
            img {
                max-width: 80px !important;
            }
            
            /* Create a scrollable table container */
            .table-container {
                width: 100%;
                overflow-x: auto;
            }
            
            button {
                padding: 8px 12px;
                margin: 10px 0;
            }
        }
        
        @media (max-width: 480px) {
            h1 {
                font-size: 28px;
            }
            
            p {
                font-size: 14px;
            }
            
            table {
                font-size: 10px;
            }
            
            img {
                max-width: 60px !important;
            }
            
            button {
                padding: 6px 10px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <h1><%= title %></h1>
    <p>Atestados Cadastrados no sistema</p>
    <br>

    <div class="table-container">
        <table style="width: 100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Matrícula</th>
                    <th>Nome</th>
                    <th>Data de Entrega</th>
                    <th>Data de Afastamento</th>
                    <th>Período</th>
                    <th>Motivo</th>
                    <th>Turma</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% atestados.forEach(function(atestados) { %>
                    <tr>
                        <td><%= atestados.id %></td>
                        <td><%= atestados.matricula %></td>
                        <td><%= atestados.nome %></td>
                        <td><%= new Date(atestados.data_entrega).toISOString().split('T')[0] %></td>
                        <td><%= new Date(atestados.data_afastamento).toISOString().split('T')[0] %></td>
                        <td><%= atestados.periodo %></td>
                        <td><%= atestados.motivo %></td>
                        <td><%= atestados.turma %></td>
                        <td>
                            <a href="/imagem/<%= atestados.id %>" target="_blank">
                                <img src="/imagem/<%= atestados.id %>" alt="Atestado" style="width: 100px; height: auto;">
                            </a>
                        </td>
                        <td>
                            <button><a href="/justificar">Justificar</a></button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <button style="margin-top: 15px;"><a href="/serie_prof">Voltar</a></button>

</body>
</html>