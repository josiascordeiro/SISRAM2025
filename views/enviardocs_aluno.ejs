<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/enviardocs_aluno">
<title>SISRAM</title>
<style>

    *{
        margin: 0;
        text-decoration: none;
        font-family: "Chakra Petch", sans-serif;
    }

    body{
        background: #020520;
    }

    .espaco{
        width: 60%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 83vh;
    }

    .header-s{
        background: aliceblue;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .header-s h1{
        font-size: 5rem;
        color: #040f6b;;
    }

    .text{
        display: flex;
        justify-content: center;
        align-items: center;
        color: aliceblue;
        padding: 1rem;
    }

    h1{
        font-size: 50px;
        text-align: center;
        letter-spacing: 3px;
        margin: 1.5rem;
    }

    h2{
        font-size: 30px;
        text-align: center;
        letter-spacing: 3px;
    }

    .btn-enviar{
        background-color: white;
        color: black;
        text-align: center;
        display: flex;
        justify-content: center;
        border-radius: 3rem;
        cursor: pointer;
        font-size: 16px;
    }

    main section{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-top: 1rem;
    }

    section input{
        border: none;
        width: 30rem;
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 3rem;
    }

    section label, section button{
        border: none;
        width: 9rem;
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 3rem;
    }

    section select{
        border: none;
        width: 32rem;
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 3rem;
    }

    .arquivo{
        display: none;
    }

    .fin{
        display: flex;
    }

    .fin button, .fin label{
        margin: 0 12px;
    }

    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        font-size: 1.5rem;
        text-align: center;
        color: aliceblue;
        padding: 15px;
    }

    section .data{
        border-radius: 0 50px 50px 50px;
    }

    section p{
        background: white;
        height: 12px;
        margin-right: 393px;
        padding: 4px;
        border-radius: 10px 10px 0px 0px;
    }

    section .p{
        background: white;
        height: 12px;
        margin-right: 410px;
        padding: 4px;
        border-radius: 10px 10px 0px 0px;
    }

    /* Media queries for responsiveness */
    @media (max-width: 1024px) {
        .espaco {
            width: 80%;
        }
        
        section input {
            width: 25rem;
        }
        
        section select {
            width: 27rem;
        }
        
        .header-s h1 {
            font-size: 4rem;
        }
        
        h1 {
            font-size: 40px;
        }
        
        h2 {
            font-size: 25px;
        }
    }
    
    @media (max-width: 768px) {
        .espaco {
            width: 90%;
        }
        
        section input {
            width: 20rem;
        }
        
        section select {
            width: 22rem;
        }
        
        .header-s h1 {
            font-size: 3rem;
        }
        
        h1 {
            font-size: 30px;
        }
        
        h2 {
            font-size: 20px;
        }
        
        section p {
            margin-right: 293px;
        }
        
        section .p {
            margin-right: 310px;
        }
        
        .fin {
            flex-direction: column;
            align-items: center;
        }
        
        footer {
            font-size: 1.2rem;
        }
    }
    
    @media (max-width: 480px) {
        .espaco {
            width: 95%;
            min-height: 70vh;
        }
        
        .header-s {
            height: 70px;
        }
        
        .header-s h1 {
            font-size: 2.5rem;
        }
        
        h1 {
            font-size: 24px;
            margin: 1rem;
        }
        
        h2 {
            font-size: 18px;
        }
        
        section input {
            width: 15rem;
            padding: 0.8rem;
        }
        
        section select {
            width: 16.6rem;
            padding: 0.8rem;
        }
        
        section p {
            margin-right: 193px;
        }
        
        section .p {
            margin-right: 210px;
        }
        
        section label, section button {
            width: 7rem;
            padding: 0.8rem;
        }
        
        .btn-enviar {
            width: 10rem;
        }
        
        footer {
            position: relative;
            font-size: 0.9rem;
        }
    }
</style>
</head>
<body>
    <header class="header-s">
        <div class="conten">
            <div>
                <h1>SISRAM</h1>
            </div>
        </div>  
      </header>
      
    <div class="espaco">
        <div class="conten">
            <div class="text">
                <header>
                    <h1>ETE-Ginásio Pernambucano</h1>
                    <h2>SISRAM - Enviar documentos/atestados</h2>
                </header>
            </div>
            <main>
                <form id="atestadoForm" enctype="multipart/form-data" method="POST" action="/enviardocs_aluno">
                    <section>
                        <input type="text" name="matricula" id="matricula" required placeholder="Matrícula:">
                
                        <input type="text" name="nome" id="nome" required placeholder="Nome:">
            
                        <p class="p">data do inicio</p><input class="data" type="date" name="data_entrega" id="data_entrega" required placeholder="Data de Entrega:">
                        
                        <p>data do termino</p><input class="data" type="date" name="data_afastamento" id="data_afastamento" required placeholder="Data de Afastamento:">
                
                        <p class="p">dias de afastamento</p><input type="text" name="periodo" id="periodo" required placeholder="Quantidade de dias de afastamento">
                        
                
                        <select name="motivo" id="motivo" required>
                            <option value="">Selecione o motivo</option>
                            <option value="Atestado Médico">Atestado Médico</option>
                            <option value="Dec_Comp_Cons">Declaração de Comparecimento a Consulta Médica</option>
                            <option value="Declaração dos Pais ou Responsável">Declaração dos Pais ou Responsável</option>
                            <option value="Estudante Atleta">Estudante Atleta</option>
                            <option value="Estudante Gestante">Estudante Gestante</option>
                            <option value="Estudante Trabalhador">Estudante Trabalhador</option>
                            <option value="Falta de Transporte Escolar">Falta de Transporte Escolar</option>
                            <option value="Outros casos/ Omissos">Outros casos/ Omissos</option>
                        </select>
            
                        <select name="turma" id="turma" required>
                            <option value="">Selecione Seu Curso e Turma</option>
                            <option value="1ADS">1ADS</option>
                            <option value="1BDS">1BDS</option>
                            <option value="1AMM">1AMM</option>
                            <option value="1BMM">1BMM</option>
                            <option value="2ADS">2ADS</option>
                            <option value="2BDS">2BDS</option>
                            <option value="2AMM">2AMM</option>
                            <option value="2BMM">2BMM</option>
                            <option value="3ADS">3ADS</option>
                            <option value="3BDS">3BDS</option>
                            <option value="3AMM">3AMM</option>
                            <option value="3BMM">3BMM</option>
                        </select>
                        
                        <div class="fin">
                            <button><a href="/">Voltar</a></button>
                      <br>
                      <div class="btn-enviar">
                        <label for="foto_afastamento" style="display: flex; align-items: center; cursor: pointer; text-align: center; padding: 10px;">
                          Selecionar Arquivo
                          <input class="arquivo" type="file" name="foto_afastamento" id="foto_afastamento" required accept="image/jpeg,image/png,application/pdf" onchange="validateFile(this)">
                        </label>
                      </div>
                      
                      <!-- Add this script at the bottom of the body -->
                      <script>
                        function validateFile(input) {
                          const file = input.files[0];
                          const fileSize = file.size / 1024 / 1024; // in MB
                          const allowedExtensions = ['jpg', 'jpeg', 'png', 'pdf'];
                          const fileExtension = file.name.split('.').pop().toLowerCase();
                          
                          // Check file size (limit to 5MB)
                          if (fileSize > 5) {
                            alert('O arquivo é muito grande. O tamanho máximo permitido é 5MB.');
                            input.value = '';
                            return false;
                          }
                          
                          // Check file extension
                          if (!allowedExtensions.includes(fileExtension)) {
                            alert('Tipo de arquivo não permitido. Por favor, envie apenas imagens (JPG, PNG) ou documentos PDF.');
                            input.value = '';
                            return false;
                          }
                          
                          return true;
                        }
                        
                        // Add form validation
                        document.getElementById('atestadoForm').addEventListener('submit', function(event) {
                          const fileInput = document.getElementById('foto_afastamento');
                          if (!validateFile(fileInput)) {
                            event.preventDefault();
                          }
                        });
                      </script>
                      <br>
                            <button type="submit">Enviar</button>
                        </div>
                    </section>
                </form>
            </main>
        </div>
        <footer>
            <p>2025 - <strong>ETE Ginásio Pernambucano.</strong> Todos os Direitos Reservados. Entrem em contato pelo <a href="https://www.instagram.com/garra_inc_technology/">@garra_inc_technology</a></p>
        </footer>
    </div>
</body>
</html>
