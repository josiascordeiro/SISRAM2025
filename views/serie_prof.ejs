<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>ETE-Ginásio Pernambucano</title>
<style>
    *{
        margin: 0;
        text-decoration: none;
        list-style: none;
        font-family: "Chakra Petch", sans-serif; 
    }

    body{
        background: #020520;
    }

    header .menu{
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 80px;
    }

    .menu ul{
        display: flex;
        justify-content: center;
    }

    header li a{
    color: black;
    font-size: 1.5rem;
    margin: 80px;
    }

    section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 40rem;
        margin: 0 auto;
        min-height: 60vh;
    }

    select{
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
        border-radius: 3rem;
        padding: 1rem;
    }

    section .btn{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    section .btn input{
        border: none;
        width: 40rem;
        padding: 1rem;
        border-radius: 3rem;
        margin-top: 10px;
    }

    h3{
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-size: 5rem;
        margin-top: 100px;
    }

    footer{
        position: fixed;
        bottom: 0;
        width: 100%;
        font-size: 1.7rem;
        text-align: center;
        color: aliceblue;
        padding: 15px;
    }

    /* Media queries for responsiveness */
    @media (max-width: 1024px) {
        section {
            width: 35rem;
        }
        
        section .btn input {
            width: 35rem;
        }
        
        h3 {
            font-size: 4rem;
            margin-top: 80px;
        }
        
        header li a {
            margin: 40px;
            font-size: 1.3rem;
        }
    }
    
    @media (max-width: 768px) {
        section {
            width: 25rem;
        }
        
        section .btn input {
            width: 25rem;
        }
        
        h3 {
            font-size: 3rem;
            margin-top: 60px;
        }
        
        header li a {
            margin: 20px;
            font-size: 1.2rem;
        }
        
        footer {
            font-size: 1.3rem;
        }
    }
    
    @media (max-width: 480px) {
        .menu ul {
            flex-direction: column;
            align-items: center;
        }
        
        header .menu {
            height: auto;
            padding: 10px 0;
        }
        
        header li a {
            margin: 10px;
            font-size: 1rem;
        }
        
        section {
            width: 18rem;
        }
        
        section .btn input {
            width: 18rem;
            padding: 0.8rem;
        }
        
        select {
            width: 18rem;
            padding: 0.8rem;
        }
        
        h3 {
            font-size: 2rem;
            margin-top: 40px;
            text-align: center;
        }
        
        footer {
            position: relative;
            font-size: 0.9rem;
            padding: 10px;
            margin-top: 20px;
        }
    }
</style>
</head>
<body>
<header>
    <NAV>
        <div class="menu">
            <ul>
                <li><a href="#">Saiba Como Ingressar</a></li>
                <li><a href="#">Serviços</a></li>
                <li><a href="#">Contatos</a></li>
            </ul>
        </div>  
    </NAV>
</header>
<h3>Escolha a Turma</h3>
<section>
        <select id="turmas1" name="turmas1" onchange="redirecionarParaView()">
            <optgroup label="1ºano">
                <option value="ND">1º ano</option>
                <option value="umAds">1ºA-DS</option>
                <option value="umBds">1ºB-DS</option>
                <option value="umAmm">1ºA-MM</option>
                <option value="umBmm">1ºB-MM</option>
            </optgroup>
        </select>
        <select id="turmas2" name="turmas2" onchange="redirecionarParaView()">
            <optgroup label="2°ano">
                <option value="ND">2º ano</option>
                <option value="doisAds">2°A-DS</option>
                <option value="doisBds">2°B-DS</option>
                <option value="doisAmm">2°A-MM</option>
                <option value="doisBmm">2°B-MM</option>
            </optgroup>
        </select>
        <select id="turmas3" name="turmas3" onchange="redirecionarParaView()">
            <optgroup label="3°ano">
                <option value="ND">3º ano</option>
                <option value="tresAds">3°A-DS</option>
                <option value="tresBds">3°B-DS</option>
                <option value="tresAmm">3°A-MM</option>
                <option value="tresBmm">3°B-MM</option>
            </optgroup>
        </select>
        <div class="btn">
            <a href="/listarAtestado"><input type="button" value="Todos Atestados"></a>
            <a href="/loginprof"><input type="button" value="Voltar"></a>
        </div>
    </section>
    <footer>
        <p>2025 - <strong>ETE Ginásio Pernambucano.</strong> Todos os Direitos Reservados. Entrem em contato pelo <a href="https://www.instagram.com/garra_inc_technology/">@garra_inc_technology</a></p>
    </footer>

    <script>
        function redirecionarParaView() {
            const selectElement1 = document.getElementById('turmas1');
            const selectedValue1 = selectElement1.value;
            const selectElement2 = document.getElementById('turmas2');
            const selectedValue2 = selectElement2.value;
            const selectElement3 = document.getElementById('turmas3');
            const selectedValue3 = selectElement3.value;

            if (selectedValue1 === 'umAds') {
                window.location.href = '/umAds';
            } else if (selectedValue1 === 'umBds') {
                window.location.href = '/umBds';
            } else if (selectedValue1 === 'umAmm') {
                window.location.href = '/umAmm';
            } else if (selectedValue1 === 'umBmm') {
                window.location.href = '/umBmm';
            } else if (selectedValue2 === 'doisAds') {
                window.location.href = '/doisAds';
            } else if (selectedValue2 === 'doisBds') {
                window.location.href = '/doisBds';
            } else if (selectedValue2 === 'doisAmm') {
                window.location.href = '/doisAmm';
            } else if (selectedValue2 === 'doisBmm') {
                window.location.href = '/doisBmm';
            } else if (selectedValue3 === 'tresAds') {
                window.location.href = '/tresAds';
            } else if (selectedValue3 === 'tresBds') {
                window.location.href = '/tresBds';
            } else if (selectedValue3 === 'tresAmm') {
                window.location.href = '/tresAmm';
            } else if (selectedValue3 === 'tresBmm') {
                window.location.href = '/tresBmm';
            }
        }
    </script>
</body>
</html>
